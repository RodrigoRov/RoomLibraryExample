<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/nombre_materia"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Programacion"
            android:textSize="24sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/nombre_catedratico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lic. Silvia Mediocre"
            android:layout_marginTop="8dp"
            android:layout_alignEnd="@id/nombre_materia"
            android:layout_below="@id/nombre_materia"
            />

        <TextView
            android:id="@+id/notaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota:"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/nombre_materia"
            android:layout_marginEnd="32dp"
            />
        <TextView
            android:id="@+id/nota_materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_alignBaseline="@id/nombre_catedratico"
            android:layout_below="@id/notaTxt"
            android:layout_alignStart="@id/notaTxt"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>