<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:subtitleTextAppearance="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="Nombre Materia: "
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Add_note_nombreMateria"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Nota: "
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Add_note_nota"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />
    </LinearLayout>



    <Button
        android:id="@+id/Add_note_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="AÃ±adir"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/Add_note_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Cancelar"
        android:layout_margin="8dp"/>



</LinearLayout>